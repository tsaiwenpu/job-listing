<h1> Add a job </h1>

<%= simple_form_for [:admin,@job] do |f| %>

<%= f.input :title, :label => "標題" %>
<%= f.input :description, :label => "說明" %>
<%= f.input :wage_lower_bound, :label => "行程人數" %>
<%= f.input :wage_upper_bound, :label => "行程天數" %>
<%= f.input :contact_email, :label => "連絡信箱" %>
<%= f.input :is_hidden, :label => "隱藏" %>

  <%= f.submit "送出" %>
<% end %>
